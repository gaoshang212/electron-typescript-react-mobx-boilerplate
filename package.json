{
  "name": "electron-typescript-react-mobx-boilerplate",
  "version": "0.0.1",
  "private": true,
  "description": "A electron boilerplate with React, MobX and Typescript",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "hot-server": "cross-env NODE_ENV=development node --max_old_space_size=2096 server.js",
    "start": "cross-env NODE_ENV=production electron ./app/main/main",
    "start-hot": "cross-env HOT=1 NODE_ENV=development electron ./app/main/main",
    "dev1": "npm run hot-server --  --start-hot",
    "dev": "webpack-dev-server --mode development --hot --progress --colors --port 3000 ",
    "build": "webpack -p --progress --colors",
    "prettier": "prettier --write \"src/**/*.{ts,tsx,css}\"",
    "build-native": "electron-rebuild -m ./app",
    "package-win": "npm run build && build --win --ia32",
    "package-mac": "npm run build && build --mac",
    "package-linux": "npm run build && build --linux",
    "package-all": "npm run build && build -mwl"
  },
  "build": {
    "productName": "electron",
    "appId": "com.gsof.app",
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "files": [
      "dist/",
      "main/",
      "node_modules/",
      "package.json"
    ],
    "directories": {
      "buildResources": "resources",
      "output": "release"
    },
    "linux": {
      "target": [
        "deb",
        "AppImage"
      ]
    }
  },
  "bin": {
    "electron": "./node_modules/.bin/electron"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/classnames": "^2.2.4",
    "@types/node": "^10.5.2",
    "@types/react": "^16.4.6",
    "@types/react-dom": "^16.0.6",
    "@types/react-router": "^4.0.28",
    "@types/webpack": "^4.4.5",
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.5",
    "cross-env": "^5.2.0",
    "css-loader": "^1.0.0",
    "electron": "^2.0.4",
    "electron-builder": "^20.20.4",
    "electron-debug": "^2.0.0",
    "electron-devtools-installer": "^2.2.4",
    "electron-rebuild": "^1.8.1",
    "express": "^4.16.3",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "file-loader": "^1.1.11",
    "html-loader": "^1.0.0-alpha.0",
    "html-webpack-plugin": "^3.2.0",
    "mobx-react-devtools": "^5.0.1",
    "postcss": "^6.0.23",
    "postcss-browser-reporter": "^0.5.0",
    "postcss-cssnext": "^3.1.0",
    "postcss-import": "^11.1.0",
    "postcss-loader": "^2.1.6",
    "postcss-reporter": "^5.0.0",
    "postcss-url": "^7.3.2",
    "prettier": "^1.13.7",
    "react-hot-loader": "^4.3.3",
    "style-loader": "^0.21.0",
    "ts-loader": "^4.4.2",
    "typescript": "^2.9.2",
    "url-loader": "^1.0.1",
    "webpack": "^4.16.0",
    "webpack-cleanup-plugin": "^0.5.1",
    "webpack-cli": "^3.0.8",
    "webpack-dev-middleware": "^3.1.3",
    "webpack-dev-server": "^3.1.4",
    "webpack-hot-middleware": "^2.22.2"
  },
  "dependencies": {
    "classnames": "^2.2.6",
    "mobx": "^5.0.3",
    "mobx-react": "^5.2.3",
    "mobx-react-router": "^4.0.4",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-router": "^4.3.1"
  }
}
